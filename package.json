{
  "name": "cnn-hapi",
  "version": "2.5.2",
  "description": "This is a generic Hapi server for starting projects.",
  "main": "init.js",
  "directories": {
    "lib": "./lib",
    "test": "./test"
  },
  "scripts": {
    "create-release": "tools/create-release.sh",
    "create-release-dry": "tools/create-release.sh --dry-run",
    "generate-authors": "tools/generate-authors.sh",
    "generate-changelog": "changelog-maker --group",
    "generate-docs": "rm -rf docs && esdoc -c .esdoc.json",
    "test": "npm run prettier && test/validate-json-files.sh",
    "update-apply": "ncu -u",
    "update-check": "ncu",
    "prettier": "prettier --config package.json --write --list-different \"./**/**/*.js\"",
    "example-server": "cd example && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cnnlabs/cnn-hapi.git"
  },
  "bugs": {
    "url": "https://github.com/cnnlabs/cnn-hapi/issues"
  },
  "homepage": "https://github.com/cnnlabs/cnn-hapi#readme",
  "engines": {
    "node": ">=8.9.4"
  },
  "dependencies": {
    "cnn-health": "0.2.1",
    "cnn-metrics": "0.5.0",
    "debug": "3.1.0",
    "good": "7.3.0",
    "good-console": "6.4.1",
    "good-squeeze": "5.0.2",
    "hapi": "17.0.0",
    "hapi-swagger": "8.0.0",
    "inert": "4.2.1",
    "podium": "1.3.0",
    "vision": "4.1.1"
  },
  "devDependencies": {
    "changelog-maker": "2.2.6",
    "esdoc": "1.0.2",
    "jsonlint": "1.6.2",
    "npm-check-updates": "2.12.1",
    "prettier": "1.12.1"
  },
  "keywords": [
    "cnn",
    "cnnlabs",
    "hapi"
  ],
  "license": "MIT",
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": false,
    "jsxBracketSameLine": true,
    "arrowParens": "always",
    "proseWrap": "always",
    "overrides": [
      {
        "files": "*.md",
        "options": {
          "printWidth": 100
        }
      }
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      },
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "rules": {
      "array-bracket-spacing": [
        2,
        "never"
      ],
      "arrow-spacing": [
        2,
        {
          "before": true,
          "after": true
        }
      ],
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": false
        }
      ],
      "comma-spacing": [
        2,
        {
          "before": false,
          "after": true
        }
      ],
      "curly": [
        2,
        "all"
      ],
      "indent": [
        2,
        4,
        {
          "SwitchCase": 1,
          "VariableDeclarator": 1
        }
      ],
      "key-spacing": [
        2,
        {
          "beforeColon": false,
          "afterColon": true
        }
      ],
      "keyword-spacing": 2,
      "linebreak-style": [
        2,
        "unix"
      ],
      "no-console": 0,
      "no-trailing-spaces": 2,
      "one-var": [
        2,
        {
          "var": "always",
          "let": "always",
          "const": "never"
        }
      ],
      "prefer-template": 2,
      "quote-props": [
        2,
        "as-needed"
      ],
      "quotes": [
        2,
        "single"
      ],
      "semi": [
        2,
        "always"
      ],
      "space-before-blocks": [
        2,
        "always"
      ],
      "space-before-function-paren": [
        2,
        {
          "anonymous": "always",
          "named": "never"
        }
      ],
      "space-infix-ops": [
        2,
        {
          "int32Hint": false
        }
      ]
    }
  },
  "eslintIgnore": [
    " ./docs",
    "./node-modules",
    ".npm-init.js"
  ]
}
